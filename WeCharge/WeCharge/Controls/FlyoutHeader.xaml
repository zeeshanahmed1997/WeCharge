<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="WeCharge.Controls.FlyoutHeader"
    HeightRequest="120">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Margin="20,0,0,0" HorizontalOptions="Start" VerticalOptions="Center" Grid.Column="0" Source="logo.png" WidthRequest="80" HeightRequest="60" BackgroundColor="Transparent" Aspect="AspectFill" />
        <Label HorizontalOptions="StartAndExpand" x:Name="UserName" VerticalOptions="Center" Grid.Column="1"  TextColor="Black" FontSize="Title" FontAttributes="Bold" />
    </Grid>
</ContentView>